<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intervaceUsuario.LoginActivity"
    android:padding="40dp">

    <RelativeLayout
       android:id="@+id/view_group_top"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="128dp"
       >
        <ImageView
            app:tint="@color/blue_dark"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_person"
            android:id="@+id/image_icon"/>

            <TextView
            android:id="@+id/text_titulo"
            android:layout_toEndOf="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:gravity="center"
            android:textSize="32sp"
            android:text="IFON" />

        </RelativeLayout>

    <EditText
        android:id="@id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nome"
        android:layout_below="@+id/view_group_top"
        />
    <EditText
        android:id="@id/edit_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:hint="Login"
        android:layout_below="@+id/edit_nome"/>

    <EditText
        android:id="@id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:hint="Senha"
        android:layout_below="@+id/edit_login"/>


    <Button
        android:id="@+id/brn_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_below="@+id/edit_senha"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/blue_dark"/>



</RelativeLayout>