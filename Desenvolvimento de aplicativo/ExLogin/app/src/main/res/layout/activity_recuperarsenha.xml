<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intervaceUsuario.CadastroActivity">

    <LinearLayout
        android:id="@+id/barra_superior"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:background="#0d2a70">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_voltar"/>

        <TextView
            android:textColor="@color/white"
            android:text="Recuperar Senha"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_loginnew"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/barra_superior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="LOGIN"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_senhanew"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_loginnew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="NOVA SENHA"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_senha_aluno"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_senhanew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="REPITA A SENHA"
        android:layout_height="48dp"/>

    <Button

        android:id="@+id/btn_salvar"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="ALTERAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_senha_aluno"
        android:background="#0d2a70"/>


</androidx.constraintlayout.widget.ConstraintLayout>